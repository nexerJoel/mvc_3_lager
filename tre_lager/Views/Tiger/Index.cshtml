@model IEnumerable<ServiceLayer.Models.TigerModel>
@{
    ViewBag.Title = "Index";
}

<h2>All tigers</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <td>Color</td>
            <td>Weight</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var tiger in Model)
            {
                <tr>
                    <td>@tiger.Color</td>
                    <td>@tiger.Weight</td>
                    <td>
                        @Html.ActionLink(
                        linkText: "Edit",
                        actionName: "Edit",
                        controllerName: "Tiger",
                        routeValues: new {
                        id = tiger.Id
                        },
                        htmlAttributes: null
                        )

                    </td>
                </tr>
            }
        }
        
        

    </tbody>
</table>


